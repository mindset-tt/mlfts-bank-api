<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports 
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" 
              name="credit_card_statement" 
              pageWidth="595" 
              pageHeight="842" 
              columnWidth="535" 
              leftMargin="20" 
              rightMargin="20" 
              topMargin="20" 
              bottomMargin="20">

    <parameter name="cardNumber" class="java.lang.String"/>
    <parameter name="customerName" class="java.lang.String"/>
    <parameter name="statementDate" class="java.lang.String"/>
    <parameter name="dueDate" class="java.lang.String"/>
    <parameter name="previousBalance" class="java.math.BigDecimal"/>
    <parameter name="currentBalance" class="java.math.BigDecimal"/>
    <parameter name="creditLimit" class="java.math.BigDecimal"/>
    <parameter name="availableCredit" class="java.math.BigDecimal"/>
    <parameter name="minimumPayment" class="java.math.BigDecimal"/>
    <parameter name="totalCharges" class="java.math.BigDecimal"/>
    <parameter name="totalPayments" class="java.math.BigDecimal"/>
    <parameter name="interestRate" class="java.math.BigDecimal"/>

    <title>
        <band height="220">
            <staticText>
                <reportElement x="0" y="0" width="535" height="30"/>
                <textElement textAlignment="Center">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[Mlfts Bank API]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="0" y="35" width="535" height="25"/>
                <textElement textAlignment="Center">
                    <font size="14" isBold="true"/>
                </textElement>
                <text><![CDATA[CREDIT CARD STATEMENT]]></text>
            </staticText>
            
            <!-- Customer Information -->
            <staticText>
                <reportElement x="0" y="80" width="100" height="15"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Account Holder:]]></text>
            </staticText>
            <textField>
                <reportElement x="100" y="80" width="200" height="15"/>
                <textElement><font size="10"/></textElement>
                <textFieldExpression><![CDATA[$P{customerName}]]></textFieldExpression>
            </textField>
            
            <staticText>
                <reportElement x="0" y="100" width="100" height="15"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Card Number:]]></text>
            </staticText>
            <textField>
                <reportElement x="100" y="100" width="200" height="15"/>
                <textElement><font size="10"/></textElement>
                <textFieldExpression><![CDATA["**** **** **** " + $P{cardNumber}.substring($P{cardNumber}.length() - 4)]]></textFieldExpression>
            </textField>
            
            <staticText>
                <reportElement x="320" y="80" width="100" height="15"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Statement Date:]]></text>
            </staticText>
            <textField>
                <reportElement x="420" y="80" width="115" height="15"/>
                <textElement textAlignment="Right"><font size="10"/></textElement>
                <textFieldExpression><![CDATA[$P{statementDate}]]></textFieldExpression>
            </textField>
            
            <staticText>
                <reportElement x="320" y="100" width="100" height="15"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Payment Due Date:]]></text>
            </staticText>
            <textField>
                <reportElement x="420" y="100" width="115" height="15" forecolor="#000000"/>
                <textElement textAlignment="Right">
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{dueDate}]]></textFieldExpression>
            </textField>
            
            <!-- Account Summary Box -->
            <rectangle>
                <reportElement x="0" y="140" width="535" height="70" backcolor="#E8F4FD"/>
            </rectangle>
            
            <staticText>
                <reportElement x="20" y="150" width="200" height="15"/>
                <textElement>
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[ACCOUNT SUMMARY]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="20" y="170" width="120" height="12"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Previous Balance:]]></text>
            </staticText>
            <textField pattern="$ #,##0.00">
                <reportElement x="140" y="170" width="80" height="12"/>
                <textElement textAlignment="Right"><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$P{previousBalance}]]></textFieldExpression>
            </textField>
            
            <staticText>
                <reportElement x="240" y="170" width="80" height="12"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Total Charges:]]></text>
            </staticText>
            <textField pattern="$ #,##0.00">
                <reportElement x="320" y="170" width="80" height="12"/>
                <textElement textAlignment="Right"><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$P{totalCharges}]]></textFieldExpression>
            </textField>
            
            <staticText>
                <reportElement x="20" y="185" width="120" height="12"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Total Payments:]]></text>
            </staticText>
            <textField pattern="$ #,##0.00">
                <reportElement x="140" y="185" width="80" height="12" forecolor="#008000"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{totalPayments}]]></textFieldExpression>
            </textField>
            
            <staticText>
                <reportElement x="240" y="185" width="80" height="12"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Current Balance:]]></text>
            </staticText>
            <textField pattern="$ #,##0.00">
                <reportElement x="320" y="185" width="80" height="12" forecolor="#FF0000"/>
                <textElement textAlignment="Right">
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{currentBalance}]]></textFieldExpression>
            </textField>
            
            <staticText>
                <reportElement x="420" y="170" width="100" height="12"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Credit Limit:]]></text>
            </staticText>
            <textField pattern="$ #,##0.00">
                <reportElement x="480" y="170" width="55" height="12"/>
                <textElement textAlignment="Right"><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$P{creditLimit}]]></textFieldExpression>
            </textField>
            
            <staticText>
                <reportElement x="420" y="185" width="100" height="12"/>
                <textElement>
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Available Credit:]]></text>
            </staticText>
            <textField pattern="$ #,##0.00">
                <reportElement x="480" y="185" width="55" height="12" forecolor="#008000"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{availableCredit}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <detail>
        <band height="120">
            <!-- Payment Information Box -->
            <rectangle>
                <reportElement x="0" y="10" width="260" height="100" backcolor="#FFF8DC"/>
            </rectangle>
            
            <staticText>
                <reportElement x="20" y="25" width="200" height="15"/>
                <textElement>
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[PAYMENT INFORMATION]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="20" y="50" width="120" height="15"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Minimum Payment Due:]]></text>
            </staticText>
            <textField pattern="$ #,##0.00">
                <reportElement x="140" y="50" width="100" height="15" forecolor="#FF0000"/>
                <textElement textAlignment="Right">
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{minimumPayment}]]></textFieldExpression>
            </textField>
            
            <staticText>
                <reportElement x="20" y="70" width="120" height="15"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Interest Rate (APR):]]></text>
            </staticText>
            <textField pattern="#,##0.00%">
                <reportElement x="140" y="70" width="100" height="15"/>
                <textElement textAlignment="Right"><font size="10"/></textElement>
                <textFieldExpression><![CDATA[$P{interestRate}.divide(new java.math.BigDecimal(100))]]></textFieldExpression>
            </textField>
            
            <!-- Important Notice Box -->
            <rectangle>
                <reportElement x="275" y="10" width="260" height="100" backcolor="#FFEEEE"/>
            </rectangle>
            
            <staticText>
                <reportElement x="285" y="25" width="200" height="15"/>
                <textElement>
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[IMPORTANT NOTICE]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="285" y="45" width="240" height="60"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <text><![CDATA[Late Payment Warning: If we do not receive your minimum payment by the date listed above, you may have to pay a late fee.

Credit Usage: High balances may affect your credit score. Consider paying more than the minimum payment.

Contact us for payment arrangements or account inquiries.]]></text>
            </staticText>
        </band>
    </detail>

    <pageFooter>
        <band height="50">
            <staticText>
                <reportElement x="0" y="10" width="300" height="15"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <text><![CDATA[Generated by Mlfts Bank API]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="0" y="25" width="400" height="15"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <text><![CDATA[For customer service, call +856-20-9587-4963 or visit our website]]></text>
            </staticText>
            
            <textField>
                <reportElement x="400" y="25" width="80" height="15"/>
                <textElement textAlignment="Right">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>
</jasperReport>
